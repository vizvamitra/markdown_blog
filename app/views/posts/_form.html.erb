<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errorExplanation">
      <% @post.errors.full_messages.each do |msg| %>
          <h4><%= msg %></h4>
      <% end %>
    </div>
  <% end %>

  <%= f.hidden_field :permalink, value: @post.permalink %>
  <%= f.label "Тема:" %>
  <%= f.text_field :title %><br/>
  <%= f.text_area :body, size: '29x6' %><br/>
  <%= f.label "Тэги:" %>
  <%= f.text_field :tags %><br/>
  <%= f.submit :Сохранить %>
<% end %>